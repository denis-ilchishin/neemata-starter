{
  "compilerOptions": {
    "lib": ["ES2023"],
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noImplicitAny": false,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "declaration": false,
    "emitDeclarationOnly": false,
    "jsx": "preserve",
    "strictNullChecks": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "#app": ["application/application.ts"],
      "#common/*": ["./application/common/*"],
      "#modules/*": ["./application/modules/*"]
    }
  }
}
